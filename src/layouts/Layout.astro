---
interface Props {
  title: string;
}
const { title } = Astro.props;
import "../styles/global.css";
import { ApiKeyBanner } from "../components/ApiKeyBanner";
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Smurfessor — Dashboard de cuentas de League of Legends" />
    <title>{title} | Smurfessor</title>
  </head>
  <body class="bg-gray-950 min-h-screen flex flex-col bg-grid">
    <header class="bg-gray-900/80 backdrop-blur-xl border-b border-gray-800/50 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 py-3 flex items-center gap-3">
        <a
          href="/"
          class="group flex items-center gap-2 text-xl font-black transition-all"
        >
          <span class="bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent group-hover:from-indigo-300 group-hover:to-purple-300 transition-all">
            Smurfessor
          </span>
          <span class="text-[10px] text-gray-600 font-medium uppercase tracking-wider hidden sm:inline border border-gray-700/50 px-1.5 py-0.5 rounded">beta</span>
        </a>
        <div class="ml-auto">
          <a
            href="/search"
            class="inline-flex items-center gap-2 px-4 py-2 text-sm text-gray-400 hover:text-white bg-gray-800/40 hover:bg-gray-800/60 border border-gray-700/40 hover:border-gray-600/60 rounded-xl transition-all backdrop-blur-sm"
          >
            <svg class="w-4 h-4 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="M21 21l-4.35-4.35"></path>
            </svg>
            <span class="hidden sm:inline">Buscar</span>
          </a>
        </div>
      </div>
    </header>

    <main class="flex-1 max-w-7xl w-full mx-auto px-4 py-6">
      <ApiKeyBanner client:load />
      <slot />
    </main>

    <footer class="text-center text-gray-700 text-xs py-4 border-t border-gray-800/50">
      Smurfessor — Proyecto no oficial. No afiliado a Riot Games.
    </footer>
  </body>
</html>
