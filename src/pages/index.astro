---
import Layout from "../layouts/Layout.astro";
import { ACCOUNTS } from "../config/accounts";
---

<Layout title="Dashboard">
  <div class="animate-fadeIn">
    <h1 class="text-3xl font-black text-center mb-2 tracking-tight text-white">
      Cuentas rastreadas
    </h1>
    <p class="text-gray-600 text-center mb-8 text-sm">
      Clickeá una cuenta para ver si está en partida
    </p>

    <!-- Search bar -->
    <div class="max-w-lg mx-auto mb-10">
      <a
        href="/search"
        class="group flex items-center gap-3 w-full px-5 py-3.5 bg-gray-800/40 border border-gray-700/40 rounded-xl text-gray-600 hover:border-indigo-500/40 hover:text-gray-400 transition-all backdrop-blur-sm hover:bg-gray-800/60 hover:shadow-lg hover:shadow-indigo-500/5"
      >
        <svg class="w-5 h-5 shrink-0 text-gray-600 group-hover:text-indigo-400 transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="M21 21l-4.35-4.35"></path>
        </svg>
        <span>Buscar cualquier invocador...</span>
      </a>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
      {
        ACCOUNTS.map((a, i) => (
          <a
            href={`/game/${a.key}`}
            class={`group relative block rounded-xl overflow-hidden transition-all border border-gray-800/50 hover:border-indigo-500/30 hover:shadow-xl hover:shadow-indigo-500/10 hover:-translate-y-1 animate-slideUp`}
            style={`animation-delay: ${i * 50}ms`}
          >
            {/* Gradient hover accent */}
            <div class="absolute inset-0 bg-gradient-to-b from-indigo-500/0 via-transparent to-indigo-500/0 group-hover:from-indigo-500/5 group-hover:to-indigo-500/5 transition-all pointer-events-none" />
            
            <div class="relative bg-gray-900/60 backdrop-blur-sm p-5">
              <div class="text-center">
                <div class="text-lg font-bold text-white truncate group-hover:text-indigo-300 transition-colors">
                  {a.label ?? a.riotId.gameName}
                </div>
                <div class="text-sm text-gray-500 mt-1 font-medium">
                  #{a.riotId.tagLine}
                </div>
                <div class="mt-3 inline-flex items-center gap-1.5 px-2.5 py-1 text-[11px] rounded-lg bg-gray-800/60 text-gray-400 font-medium border border-gray-700/30">
                  <span class="w-1.5 h-1.5 rounded-full bg-gray-600" />
                  {a.platform}
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
